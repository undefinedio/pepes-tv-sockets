<style>
    @font-face {
        font-family: 'gt';
        src: url('fonts/gt-walsheim-pro-ultra-bold-oblique-webfont.woff2') format('woff2'),
        url('fonts/gt-walsheim-pro-ultra-bold-oblique-webfont.woff') format('woff');
        font-weight: normal;
        font-style: normal;
    }

    html,
    body {
        margin: 0;
        padding: 0;
        font-family: 'gt';
    }

    @keyframes scroll {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(-100%, 0);
        }
    }

    @keyframes blink {
        0% {
            opacity: 0;
        }

        49% {
            opacity: 0;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 1;
        }
    }

    .bar {
        position: absolute;
        bottom: 2%;
        left: 2%;
        right: 2%;
        overflow: hidden;
    }

    h1 {
        font-size: 23px;
    }

    img {
        width: 100%;
    }

    .marquee {
        width: 100%;
        white-space: nowrap;
        overflow: hidden;
        color: white;
        position: absolute;
        bottom: 29%;
        right: 0;
        left: 31.5%;
    }

    .dot {
        height: 10px;
        width: 10px;
        background: red;
        border-radius: 50%;
        position: absolute;
        top: 36%;
        left: 10.5%;
        animation: blink 1s infinite linear;

    }

    .marquee .wrapper {
        display: inline-block;
        padding-left: 100%;
        animation: scroll 10s infinite linear;
    }

    i.spacing {
        background: url('images/spacer.png') no-repeat center;
        height: .6em;
        width: 1em;
        background-size: contain;
        display: inline-block;
        margin-left: .5em;
        margin-right: .3em;
    }

</style>

<div class="bar">
    <div class="dot"></div>
    <img src="images/overlay.png" alt="">
    <h1 class="marquee"><span class="wrapper"><span class="js-message">This is a test</span> <i
        class="spacing"></i> <span class="js-from">Vincent Peters</span> </span></h1>
</div>

